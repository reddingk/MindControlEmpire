<!--Default Carousel-->
<div class="container mce-carousel-container">
    <div class="row">
        <!-- The carousel -->
        <div id="transition-timer-carousel" class="carousel slide transition-timer-carousel carousel-animate" data-ride="carousel">
            <!--Title-->
            <div class="main-title">Mind Control Empire</div>
			<!-- Indicators -->
			<ol class="carousel-indicators">
				<li data-target="#transition-timer-carousel" data-slide-to="0" class="active"></li>
				<li data-target="#transition-timer-carousel" data-slide-to="1"></li>
				<li data-target="#transition-timer-carousel" data-slide-to="2"></li>
				<li data-target="#transition-timer-carousel" data-slide-to="3"></li>
			</ol>

			<!-- Wrapper for slides -->
			<div class="carousel-inner">
				<div class="item active">
                    <img class="carousel-img" src="../siteimg/home1.jpg" />
                    <div class="carousel-caption main-carousel-caption">
                        <h3 data-animation="animated bounceInLeft">
                          <span class="icon-container"><i class="fa fa-microphone"></i></span>Music Production And Management<span></span>
                        </h3>
                        <p data-animation="animated bounceInRight">
                        </p>
                    </div>
                </div>
                
                <div class="item">
                    <img class="carousel-img" src="../siteimg/home2.jpg" />
                    <div class="carousel-caption main-carousel-caption">
                        <h3 data-animation="animated bounceInDown">
                          <span class="icon-container"><i class="fa fa-calendar"></i></span> <span>Production</span>
                        </h3>
                        <p data-animation="animated bounceInUp">
                          With world class beats our production team work closly with the artist to develop their sound.
                        </p>
                    </div>
                </div>
                
                <div class="item">
                    <img class="carousel-img" src="../siteimg/home3.jpg" />
                    <div class="carousel-caption main-carousel-caption">
                        <h3 data-animation="animated zoomInLeft">
                          <span class="icon-container"><i class="fa fa-headphones"></i></span> <span>Artist Management</span>
                        </h3>
                        <p data-animation="animated flipInX">
                          Our Management team brings the world to the artist.
                        </p>
                    </div>
                </div>
                
                <div class="item">
                    <img class="carousel-img" src="../siteimg/home4.jpg" />
                    <div class="carousel-caption main-carousel-caption">
                        <h3 data-animation="animated bounceInLeft">
                          <span class="icon-container"><i class="fa fa-video-camera"></i></span> <span>Media Development</span>
                        </h3>
                        <p data-animation="animated bounceInRight">
                          Our Media development team produce's our artists video's as well as photo's.
                        </p>
                    </div>
                </div>
            </div>

			<!-- Controls -->
			<a class="left carousel-control" href="#transition-timer-carousel" data-slide="prev">
				<span class="glyphicon glyphicon-chevron-left"></span>
			</a>
			<a class="right carousel-control" href="#transition-timer-carousel" data-slide="next">
				<span class="glyphicon glyphicon-chevron-right"></span>
			</a>
            
            <!-- Timer "progress bar" -->
            <hr class="transition-timer-carousel-progress-bar animate" />
		</div>
    </div>
</div>
<!--Releases-->
<div class="row home-row back-color-gold">
    <div class="container mce-release-container">
        <div class="home-subtitle">Recent Releases</div>
        <!--Release Carosel-->
        <div class="r-container">
        <div id="releaseCarousel" class="carousel slide" data-ride="carousel">
            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <% @itemnum = 0 %>
                <% @newreleases.each do |release| %>
                   
                    <div class="item <%= 'active' if @itemnum == 0 %>">
                        <% if release["type"] == "youtube" %>
                            <div class="release-video-card"></div>
                            <div class="carousel-caption release-caption">
                                <div class="col-sm-5 release-video"><object data="https://www.youtube.com/embed/<%= release["url"].split("v=")[1] %>"></object></div>
                                <div class="col-sm-4">
                                    <h3><%= release["artist"] %></h3>
                                    <p><%= release["date"].to_date.strftime('%m/%d/%Y') %></p>
                                    <p><%= release["title"] %></p>
                                </div>
                            </div>
                        <% end %>
                    </div>    
                
                    <% @itemnum = @itemnum + 1 %>
                <% end %>
