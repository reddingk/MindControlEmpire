<div class="row page-row">
    <div class="container page-container grey-container event-page">
        <div class="row">
            <div class="home-subtitle">Upcoming Events</div>
            <% if @comingevents.size > 0 %>
                <div class="mce-event-cards">
                    <% @comingevents.each do |event| %>
                        <div class="col-sm-3 mce-event-card">
                            <div class="event-card">
                                <div class="card-back">
                                    <div class="e-card-when"><span class="e-card-date"><%= event["date"].to_date.strftime('%b %d %Y') %></span><span class="e-card-time"><%= event["time"].to_time.strftime('%l:%M %P') %></span></div>
                                    <div class="e-card-title"><span class="e-card-name"><%= event["eventname"] %></span><span class="e-card-location"><%= event["location"] %></span></div>
                                </div>
                                <div class="card-front">
                                    <div class="e-card-artist"><%= event["artistname"] %></div>
                                    <div class="e-card-artist-photo"><img src='../artists/<%= event["photo"] %>' alt='<%= event["artistname"] %> photo' class="e-card-photo"> </div>
                                    <div style="clear: both;"></div>
                                </div>
                            </div>
                        </div>
                    <% end %>
                </div>
                            <% else %>
                <h2><i class="fa fa-calendar-times-o"></i> Check Back For Upcoming Events and Releases</h2>
            <% end %>
        </div>
        
        <div class="row">
            <% if @pastevents.size > 0 %>
                <div class="home-subtitle">Past Events</div>
                <div class="mce-event-cards">
                    <% @pastevents.each do |event| %>
                        <div class="col-sm-3 mce-event-card">
                            <div class="event-card past-card">
                                <div class="card-back">
                                    <div class="e-card-when"><span class="e-card-date"><%= event["date"].to_date.strftime('%b %d %Y') %></span><span class="e-card-time"><%= event["time"].to_time.strftime('%l:%M %P') %></span></div>
                                    <div class="e-card-title"><span class="e-card-name"><%= event["eventname"] %></span><span class="e-card-location"><%= event["location"] %></span></div>
                                </div>
                                <div class="card-front">
                                    <div class="e-card-artist"><%= event["artistname"] %></div>
                                    <div class="e-card-artist-photo"><img src='../artists/<%= event["photo"] %>' alt='<%= event["artistname"] %> photo' class="e-card-photo"> </div>
                                    <div style="clear: both;"></div>
                                </div>
                            </div>
                        </div>
                    <% end %>
                </div>
            <% else %>
               
            <% end %>
            
        </div>
    </div>
</div>
